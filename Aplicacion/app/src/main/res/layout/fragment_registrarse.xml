<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.RegistrarseFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7FFF5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:background="#CFFFCF"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Flecha a la izquierda -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/flecha_atras"
                    android:layout_margin="30dp"/>

                <!-- Texto centrado -->
                <TextView
                    android:id="@+id/textViewRegistrarse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:text="Registrarse"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"/>
            </LinearLayout>

            <!-- Campo nombre -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/registrarseNombreLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black"
                android:hint="Ingrese su nombre"
                android:textColorHint="#4A662C">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registrarseNombreText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:background="@drawable/style_edittext"/>
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Campo Correo Electronico -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/registrarseCorreoLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black"
                android:hint="Ingrese su email"
                android:textColorHint="#4A662C">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registrarseCorreoText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:background="@drawable/style_edittext"/>
            </com.google.android.material.textfield.TextInputLayout>



            <!-- Campo Contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/registrarseContraseñaLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                app:hintEnabled="true"
                app:hintTextColor="@color/black"
                android:hint="Ingresa una contraseña"
                android:textColorHint="#4A662C"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registrarseContraseñaText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:background="@drawable/style_edittext"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textCodigoVerif"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:text="Codigo de verificacion"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="16sp">
            </TextView>

            <!-- Campo Email verif -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/verifCorreoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:hint="Ingrese su email"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black">

                <!-- CONTENEDOR HORIZONTAL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- EDITTEXT (IZQUIERDA) -->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/verifCorreoText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:text="Ingrese su email"
                        android:background="@drawable/style_edittext"/>

                    <!-- IMAGEN DE LA FLECHA -->
                    <ImageView
                        android:id="@+id/verifFlecha"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/flecha_atras"
                        android:background="@drawable/style_edittext"/>

                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>




            <!-- Botón Iniciar Sesión -->
            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Iniciar Sesión"
                android:layout_margin="30dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                android:backgroundTint="@color/VerdeBoton"/>

        </LinearLayout>

    </ScrollView>



</FrameLayout>