<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/loginFragment">
    <activity
        android:id="@+id/splashScreen"
        android:name="com.example.agrotechgamara.ui.activitys.SplashScreen"
        android:label="activity_splash_screen"
        tools:layout="@layout/activity_splash_screen" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.agrotechgamara.ui.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registrarseFragment"
            app:destination="@id/registrarseFragment"
            app:enterAnim="@anim/entrada"
            app:exitAnim="@anim/salida"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_loginFragment_to_inicioFragment"
            app:destination="@id/inicioFragment"
            app:enterAnim="@anim/entrada"
            app:exitAnim="@anim/salida"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/registrarseFragment"
        android:name="com.example.agrotechgamara.ui.fragments.RegistrarseFragment"
        android:label="fragment_registrarse"
        tools:layout="@layout/fragment_registrarse" >
        <action
            android:id="@+id/action_registrarse_to_login"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/entrada"
            app:exitAnim="@anim/salida"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.example.agrotechgamara.ui.fragments.InicioFragment"
        android:label="fragment_inicio"
        tools:layout="@layout/fragment_inicio">
        <action
            android:id="@+id/action_inicioFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/entrada"
            app:exitAnim="@anim/salida"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_inicioFragment_to_cerrarSesionFragment"
            app:destination="@id/perfilFragment" />
    </fragment>
    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.example.agrotechgamara.ui.fragments.PerfilFragment"
        android:label="fragment_cerrar_sesion"
        tools:layout="@layout/fragment_perfil" >
        <action
            android:id="@+id/action_cerrarSesionFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>